<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.victoryroad.cheers.LoginActivity"
    android:weightSum="1"
    android:background="@color/bg">
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_view">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/transparentmap"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="64sp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:id="@+id/title_text_view"
            android:textColor="@color/com_facebook_button_border_color_focused"
            android:layout_weight="0.93"
            android:layout_marginTop="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            app:srcCompat="@drawable/winebg"
            android:id="@+id/imageView"
            android:layout_height="742dp"
            android:layout_width="match_parent"
            android:layout_centerInParent="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="64dp"
            android:layout_alignTop="@+id/title_text_view"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:orientation="vertical"
            android:id="@+id/control_view"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="53dp">

            <Button
                android:text="@string/create_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/login_button"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/create_account_button"
                android:textAllCaps="false" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

        </LinearLayout>

    </RelativeLayout>
