<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.victoryroad.cheers.SetGoingOutTimeFragment"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Going Out?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="45sp"
            android:textAlignment="center"
            android:background="@color/bg"
            android:textColor="@android:color/white"
            android:padding="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Date:"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                android:textSize="25sp"
                android:paddingRight="35dp"
                android:gravity="center_vertical" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/dateSelector"
                android:textSize="25sp"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:text="Time:"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/textView3"
            android:textSize="25sp"
                android:paddingRight="30dp"
                android:gravity="center_vertical" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/timeSelector"
                android:textSize="25sp"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Return Time:"
                android:layout_height="match_parent"
                android:id="@+id/textView4"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_width="100dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/returnSelector"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:paddingBottom="20dp"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Cancel"
                android:layout_weight="1"
                android:background="@color/com_facebook_button_background_color_disabled"
                android:layout_margin="5dp" />

            <Button
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:background="@color/com_facebook_button_send_background_color_pressed"
                android:layout_margin="5dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
