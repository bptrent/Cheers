<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:defaultValue="2"
        android:key="example_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_add_friends_to_messages" />

    <Preference
        android:key="custom_contact"
        android:title="@string/pref_title_custom_contact"
        android:summary="Not Selected"/>

    <Preference
        android:key="custom_set_home_location"
        android:title="@string/pref_title_custom_set_home_location"
        android:summary="Set your current location as your home location"/>

</PreferenceScreen>
